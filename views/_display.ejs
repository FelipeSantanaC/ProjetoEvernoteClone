<div id="form-display" class="form-group row">
    <label id="titles-display" class="col-form-label col-sm-2" for="Title">Título</label>
    <div class="col-sm-8">
      <input readonly class="form-control" id="Title" value="<%= model.title %>" />
    </div>
  </div>

<div id="form-display" class="form-group row">
    <label id="titles-display" class="col-form-label col-sm-2" for="Comments">Conteúdo</label>
    <div class="col-sm-10">
      <textarea readonly class="form-control" cols="20" id="Comments" maxlength="32000" rows="7"><%= model.corpo %></textarea>
    </div>
  </div>

  <div id="form-display" class="form-group row">
    <label id="titles-display" class="col-form-label col-sm-2" for="Title">Categoria</label>
    <div class="col-sm-8">
      <input readonly class="form-control" id="categories" value="<%= model.categoria.nome %>" />
    </div>
  </div>

<div id="form-display" class="form-group row">
    <label id="titles-display" class="col-form-label col-sm-2" for="Comments">Criação</label>
    <div class="col-sm-10">
      <p>Criado em: <%= model.created_at %></p>
    </div>
  </div>

  <div id="form-display" class="form-group row">
    <label id="titles-display" class="col-form-label col-sm-2" for="Comments">Modificação</label>
    <div class="col-sm-10">
      <p>Modificado em: <%= model.updated_at %></p>
    </div>
  </div>